<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Suppliers</h1>
<!-- DataTales Example -->
<div>  
  <%= link_to new_supplier_path, {remote: true, class: "btn btn-info", id: "anadir-cliente-btn"}  do %>
    <span class="fas fa-plus-square" style="">New Supplier</span>
  <% end %>
</div>
<br />
<div class="card shadow mb-4">
<div class="card-body">
    <div class="table-responsive">
    <table class="table table-bordered" id="tableSupplier" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
            <% @suppliers.each do |supplier| %>
            <tr id="supplier_<%= supplier.id %>" >
                <td><%= supplier.name %></td>
                <td><%= supplier.address %></td>
                <td><%= supplier.phone %></td>
                <td>
                <%= link_to "Edit", edit_supplier_path(supplier), html_options = {class: "btn btn-info btn-xs", remote: true} %>
                <%= link_to "Delete", supplier, remote: true, method: :delete, data: { confirm: "Â¿Borrar suppliere: #{supplier.name}?"}, class: "btn btn-danger btn-xs" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>

<%= render "modal_suppliers" %>