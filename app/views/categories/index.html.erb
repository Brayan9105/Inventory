
<h1 class="h3 mb-2 text-grey-800">Products categories</h1>
<div>
  <%= link_to new_category_path, {remote: true, class: "btn btn-info", id: "add-category-btn"} do %>
    <span class="fas fa-plus-square" style="">Add category</span>
  <% end %>
</div>
<br/>

<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table id="tableCategories" class="table table-bordered" width="100%">
        <thead>
          <tr>
            <th>Category Name</th>
            <th>Description</th>
            <th></th>
          </tr>
          <tbody>
            <% @categories.each do |category| %>
              <tr id="category_<%= category.id %>">
                <td> <%= category.name %> </td>
                <td> <%= category.description %> </td>
                <td> 
                  <%= link_to 'Edit', edit_category_path(category), remote: true, class: "btn btn-info btn-xs" %> 
                  <%= link_to 'Delete', category, remote: true, method: :delete, data: { confirm: 'Are you sure to delete this category?'}, class: "btn btn-danger btn-xs" %> 
                </td>
              </tr>
            <% end %>
          </tbody>
        </thead>
      </table>
    </div>
  </div>
</div>

<%= render 'modal_categorias' %>